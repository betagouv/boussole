      /       / = public_service['description']
      /       = public_service['postal_address']

      /       - if public_service['phone']
      /         %br
      /         %abbr{ title: 'Téléphone' }
      /           T :
      /           = public_service['phone']

      /       - if public_service['email']
      /         %br
      /         %abbr{ title: 'Email' }
      /           E :
      /           = mail_to(public_service['email'])

      /       - if public_service['url']
      /         %br
      /         %abbr{ title: 'Site' }
      /           W :
      /           = link_to(public_service['url'], public_service['url'])

      /     %h5 Un·e professionnel·le est disponible pour t'aider à :

      /     .row
      /       - public_service['offer'].each do |service|
      /         .col-md-4
      /           %br
      /           %br
      /           .small
      /             = service

      /     - if public_service[:measures].presence

      /       %h5 
      /       %h5 Nous avons également détecté pour toi :

      /       - public_service[:measures].each do |mesure|
